<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BaseVideoController">
        <attr name="loadingIgnoreTs" format="integer" />
        <attr name="loadingBackgroundColor" format="color|reference" />
        <attr name="loadingRes" format="reference" />
        <attr name="failRes" format="reference" />
        <attr name="loadingIconWidth" format="dimension" />
        <attr name="loadingIconHeight" format="dimension" />
        <attr name="failIconWidth" format="dimension" />
        <attr name="failIconHeight" format="dimension" />

        <attr name="hintTextColor" format="color|reference" />
        <attr name="refreshTextColor" format="color|reference" />
        <attr name="loadingText" format="string" />
        <attr name="failText" format="string" />
        <attr name="refreshHintText" format="string" />
        <attr name="hintTextSize" format="dimension" />
        <attr name="refreshTextSize" format="dimension" />

        <attr name="keepScreenOnWhenPlaying" format="boolean" />
        <attr name="autoFullTools" format="boolean" />
        <attr name="autoFullInterval" format="integer" />
        <attr name="muteIconEnable" format="enum">
            <enum name="DISPLAY_VISIBLE" value="2" />
            <enum name="DISPLAY_GONE" value="1" />
            <enum name="GONE" value="0" />
        </attr>
        <attr name="speedIconEnable" format="enum">
            <enum name="DISPLAY_VISIBLE" value="2" />
            <enum name="DISPLAY_GONE" value="1" />
            <enum name="GONE" value="0" />
        </attr>
        <attr name="defaultControllerVisibility" format="enum">
            <enum name="DISPLAY_VISIBLE" value="2" />
            <enum name="DISPLAY_GONE" value="1" />
            <enum name="GONE" value="0" />
        </attr>
        <attr name="fullScreenEnable" format="enum">
            <enum name="DISPLAY_VISIBLE" value="2" />
            <enum name="DISPLAY_GONE" value="1" />
            <enum name="GONE" value="0" />
        </attr>
        <attr name="secondarySeekBarEnable" format="enum">
            <enum name="DISPLAY_VISIBLE" value="2" />
            <enum name="DISPLAY_GONE" value="1" />
            <enum name="GONE" value="0" />
        </attr>
        <attr name="isDefaultMaxScreen" format="boolean" />
        <attr name="fullMaxScreenEnable" format="boolean" />
        <attr name="lockScreenRotation" format="enum">
            <enum name="LANDSCAPE" value="0" />
            <enum name="PORTRAIT" value="1" />
        </attr>

        <attr name="muteDefault" format="boolean" />
        <attr name="useMuteGlobal" format="boolean" />
    </declare-styleable>
</resources>