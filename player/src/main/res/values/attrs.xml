<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="VideoLoadingView">
        <attr name="zPlayer_backgroundFill" format="color|reference" />
        <attr name="zPlayer_backgroundOnAct" format="color|reference" />
        <attr name="zPlayer_loadingRes" format="reference" />
        <attr name="zPlayer_noDataRes" format="reference" />
        <attr name="zPlayer_noNetworkRes" format="reference" />
        <attr name="zPlayer_hintColor" format="color|reference" />
        <attr name="zPlayer_refreshTextColor" format="color|reference" />
        <attr name="zPlayer_loadingText" format="string" />
        <attr name="zPlayer_noDataText" format="string" />
        <attr name="zPlayer_networkErrorText" format="string" />
        <attr name="zPlayer_refreshText" format="string" />
        <attr name="zPlayer_showOnActDefault" format="boolean" />
        <attr name="zPlayer_refreshEnable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BaseVideoController">

        <attr name="muteIconEnable" format="enum">
            <enum name="DISPLAY_VISIBLE" value="2" />
            <enum name="DISPLAY_GONE" value="1" />
            <enum name="GONE" value="0" />
        </attr>
        <attr name="speedIconEnable" format="enum">
            <enum name="DISPLAY_VISIBLE" value="2" />
            <enum name="DISPLAY_GONE" value="1" />
            <enum name="GONE" value="0" />
        </attr>
        <attr name="defaultControllerVisibility" format="enum">
            <enum name="DISPLAY_VISIBLE" value="2" />
            <enum name="DISPLAY_GONE" value="1" />
            <enum name="GONE" value="0" />
        </attr>
        <attr name="fullScreenEnable" format="enum">
            <enum name="DISPLAY_VISIBLE" value="2" />
            <enum name="DISPLAY_GONE" value="1" />
            <enum name="GONE" value="0" />
        </attr>
        <attr name="secondarySeekBarEnable" format="enum">
            <enum name="DISPLAY_VISIBLE" value="2" />
            <enum name="DISPLAY_GONE" value="1" />
            <enum name="GONE" value="0" />
        </attr>
        <attr name="isDefaultMaxScreen" format="boolean" />
        <attr name="fullMaxScreenEnable" format="boolean" />
        <attr name="lockScreenRotation" format="enum">
            <enum name="LANDSCAPE" value="0" />
            <enum name="PORTRAIT" value="1" />
        </attr>

        <attr name="muteDefault" format="boolean" />
        <attr name="useMuteGlobal" format="boolean" />
        <attr name="loadingViewLayoutId" format="reference" />
        <attr name="loadingViewId" format="reference" />
    </declare-styleable>
</resources>