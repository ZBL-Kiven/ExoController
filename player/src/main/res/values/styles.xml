<resources>

    <declare-styleable name="BaseLoadingView">
        <attr name="backgroundFill" format="color|reference" />
        <attr name="backgroundOnAct" format="color|reference" />
        <attr name="loadingRes" format="reference" />
        <attr name="noDataRes" format="reference" />
        <attr name="noNetworkRes" format="reference" />
        <attr name="hintColor" format="color|reference" />
        <attr name="refreshTextColor" format="color|reference" />
        <attr name="loadingText" format="string" />
        <attr name="noDataText" format="string" />
        <attr name="networkErrorText" format="string" />
        <attr name="refreshText" format="string" />
        <attr name="showOnActDefault" format="boolean" />
        <attr name="refreshEnable" format="boolean" />
    </declare-styleable>

    <style name="mProgress_circle">
        <item name="android:minWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:maxHeight">100dp</item>
    </style>

    <style name="CustomSeekBarStyle">
        <item name="android:maxHeight">3dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@color/z_player_color_white</item>
        <item name="android:progressDrawable">@drawable/z_player_video_seek_bar_progress_drawable
        </item>
        <item name="android:minHeight">1dp</item>
        <item name="android:thumb">@drawable/z_player_video_seek_thumb</item>
    </style>

    <style name="SingleCustomSeekBarStyle">
        <item name="android:maxHeight">2dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@color/z_player_color_white</item>
        <item name="android:progressDrawable">
            @drawable/z_player_video_seek_bar_progress_drawable_single
        </item>
        <item name="android:minHeight">2dp</item>
        <item name="android:thumb">@drawable/z_player_video_seek_thumb_single</item>
    </style>

    <style name="BaseGestureFullScreenDialogStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
    </style>

</resources>
